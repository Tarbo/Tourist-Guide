<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/tourist_homepage"
    tools:context="com.example.android.touristguide.MainActivity">


    <TextView
        android:id="@+id/en_textview"
        style="@style/textview_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_lang_text"
        android:layout_margin="50dp"
        android:layout_gravity="center" />

    <RadioButton
        android:id="@+id/en_radio_button"
        style="@style/textview_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_dark"
        android:onClick="onRadioButtonClicked"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:text="@string/english_language" />
</LinearLayout>